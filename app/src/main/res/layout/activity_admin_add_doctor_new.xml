<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faisal.supermom.AdminAddDoctorActivityNew"

    android:background="@drawable/admin_add_doctor_bg1"

    >

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Add Doctor Info"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark"

        android:textSize="40dp"
        android:fontFamily="cursive"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView14"
        android:layout_margin="10dp"
        android:id="@+id/doctorName"
        >


        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name : "

            />

        <EditText
            android:id="@+id/addDoctorNameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="doctor name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/doctorName"
        android:layout_margin="10dp"
        android:id="@+id/doctorHospital"
        >


        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Hospital : " />

        <EditText
            android:id="@+id/addDoctorHospitalID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hospital"
            android:inputType="textPersonName"
            android:textAlignment="center"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/doctorHospital"
        android:layout_margin="10dp"
        android:id="@+id/avalibility"
        >


        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availibility : " />

        <EditText
            android:id="@+id/addDoctorAvailibilityID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="availibility"
            android:inputType="textPersonName"
            android:textAlignment="center"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/avalibility"
        android:layout_margin="10dp"
        android:id="@+id/specializedIn"
        >


        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialized In : " />

        <EditText
            android:id="@+id/addDoctorSpecializedID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="specialized"
            android:inputType="textPersonName"
            android:textAlignment="center"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/specializedIn"
        android:layout_margin="10dp"
        android:id="@+id/contactNo"
        >


        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Contact No : " />

        <EditText
            android:id="@+id/addDoctorContactID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="contact no"
            android:inputType="textPersonName"
            android:textAlignment="center"
            />

    </LinearLayout>


    <Button
        android:id="@+id/processUploadImageForDoctorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select image from gallery"
        android:layout_below="@+id/contactNo"
        android:layout_alignParentStart="true"

        android:background="@drawable/button_circle_radius"
        android:textColor="@color/colorwhite"
        android:padding="3dp"


        />

    <Button
        android:id="@+id/saveDoctorInfoToFirebaseBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactNo"
        android:layout_alignEnd="@+id/contactNo"
        android:text="Add info"

        android:background="@drawable/button_circle_radius"
        android:textColor="@color/colorwhite"
        android:padding="5dp"

        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/processUploadImageForDoctorID"
        android:id="@+id/menuForAdminID"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/goToAddNewsfeedInfoPageID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Newsfeed info"


            android:background="#DE5448"
            android:textColor="@color/colorwhite"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="14dp"

            android:layout_marginLeft="50dp"

            />

        <TextView
            android:id="@+id/goToAddDoctorInfoPageID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Doctor Info"



            android:background="#DE5448"
            android:textColor="@color/colorwhite"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="14dp"

            android:layout_marginLeft="50dp"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:id="@+id/menuForAdmin2ID"
        android:layout_below="@+id/menuForAdminID"
        android:layout_marginTop="5dp"


        >

        <TextView
            android:id="@+id/goToUpdateNewsfeedInfoPageID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update newsfeed"


            android:background="#DE5448"
            android:textColor="@color/colorwhite"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="14dp"

            android:layout_marginLeft="50dp"

            />


        <TextView
            android:id="@+id/goToUpdateDoctorInfoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Doctor"



            android:background="#DE5448"
            android:textColor="@color/colorwhite"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginLeft="60dp"


            />



    </LinearLayout>





</RelativeLayout>
