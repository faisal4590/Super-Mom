<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"

        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaccine location : "

            android:textSize="15sp"
            android:textColor="@color/colorwhite"
            />


        <TextView
            android:id="@+id/vaccineLocationID"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:hint="vaccine location"

            android:textSize="20dp"

            android:textColor="@color/colorwhite"
            android:textColorHint="@color/colorwhite"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lin1"
        android:layout_marginTop="10dp"

        android:id="@+id/lin2"

        >
        <TextView
            android:id="@+id/textView12"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="@string/available_vaccine_center"
            android:textSize="15sp"
            android:textColor="@color/colorwhite"

            />


        <TextView
            android:id="@+id/vaccineDetailsInfoID"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/info_about_available_vaccine_center"
            android:textSize="20dp"

            android:textColor="@color/colorwhite"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin2"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/textView13"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:text="Vaccine available for(In months) : "
            android:textSize="15sp"

            android:textColor="@color/colorwhite"

            />


        <TextView
            android:id="@+id/vaccineAvailableForID"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="@string/info_about_available_vaccine_center"
            android:textSize="20dp"

            android:textColor="@color/colorwhite"/>


    </LinearLayout>


</LinearLayout>