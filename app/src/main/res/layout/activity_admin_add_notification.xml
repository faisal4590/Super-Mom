<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faisal.supermom.AdminAddNotificationActivity"

    android:background="@drawable/admin_add_vaccine_info_bg"

    android:padding="8dp"
    >


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Add vaccine info"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:fontFamily="cursive"
        android:textSize="40dp"


        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="130dp"
        >
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new vaccine campaign location"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:id="@+id/adminAddVaccineCampaignLocationID"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter detailed info about new campaign"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:id="@+id/adminAddVaccineCampaignDetailsID"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose for what age the campaign is made(In months)"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:id="@+id/adminAddVaccineCampaignAvailableForID"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_circle_radius"
            android:text="Save data"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorwhite"
            android:id="@+id/processAddVaccineInfoNotificationID"

            />


        
    </LinearLayout>



</RelativeLayout>
