<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faisal.supermom.HealthMonitorActivity"
    android:background="@drawable/health_monitor_bg"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/healthMonitorHeadlineID"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/child_info"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"

            android:fontFamily="cursive"
            android:textSize="30dp"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/healthMonitorChildAgeID"
        android:layout_below="@+id/healthMonitorHeadlineID"
        android:layout_marginBottom="10dp"
        >


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/child_age"
            android:textColor="#FFE793"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/enterChildAgeForHealthMonitorID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/input_child_age"
            android:layout_marginLeft="25dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/healthMonitorChildHeightID"
        android:layout_below="@+id/healthMonitorChildAgeID"
        android:layout_marginBottom="10dp"
        >


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Height : "
            android:textColor="#FFE793"
            android:textSize="16sp"

            />

        <EditText
            android:id="@+id/enterChildHeightForHealthMonitorID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/enter_child_height"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/healthMonitorChildWeightID"
        android:layout_below="@+id/healthMonitorChildHeightID"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Child Weight : "

            android:textColor="#FFE793"
            android:textSize="16sp"
            />


        <EditText
            android:id="@+id/enterChildWeightFOrHealthMonitorID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="textPersonName"
            android:hint="@string/enter_child_weight"



            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/healthMonitorChildGenderID"
        android:layout_below="@+id/healthMonitorChildWeightID"
        android:layout_marginBottom="10dp"
        >


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Gender"

            android:textColor="#FFE793"
            android:textSize="16sp"
            />

        <Spinner
            android:id="@+id/enterChildGenderForHealthMonitorID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:entries="@array/genderChoser"
            android:textAlignment="center"
            />
    </LinearLayout>






    <Button
        android:id="@+id/showHealthReportForHealthMonitorID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/healthMonitorChildWeightID"
        android:layout_marginTop="28dp"
        android:text="@string/show_health_report"
        android:background="@drawable/button_circle_radius"
        android:textColor="#ffff"
        android:padding="10dp"



        />



</RelativeLayout>
