<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faisal.supermom.HomePageActivity"
    android:id="@+id/drawerLayout"
    android:background="#FFF3E0"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="Welcome"
            android:textAlignment="center"
            android:textSize="20dp"

            />


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu"

        >

    </android.support.design.widget.NavigationView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.faisal.supermom.HomePageActivity"
        android:gravity="center_vertical"
        >


        <Button
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/birthdayPicker"
            android:padding="5dp"

            android:background="@drawable/button_circle_radius"
            android:textColor="#fff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/logOut"
            android:layout_below="@+id/birthday"

            android:layout_marginTop="20dp"

            android:background="@drawable/button_circle_radius"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#fff"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMenuID"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_below="@+id/logOut"
            >

            <TextView
                android:id="@+id/goToBeAnAwesomeMomPageID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Newsfeed"
                android:padding="10dp"
                android:textAlignment="center"

                android:background="#08AFA7"
                android:textColor="#fff"



                />

            <TextView
                android:id="@+id/goToHealthMonitorID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Monitor"
                android:textAlignment="center"

                android:background="#08AFA7"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:padding="10dp"

                />

            <TextView
                android:id="@+id/goToRemainderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remainder"
                android:textAlignment="center"

                android:background="#08AFA7"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/textViewMenuID"
            android:padding="10dp">

            <TextView
                android:id="@+id/goToOurSpecialistPageID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Specialists"

                android:background="#08AFA7"
                android:textColor="#fff"

                android:padding="10dp"

                />



            <TextView
                android:id="@+id/goToAboutUsPageID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"

                android:background="#08AFA7"
                android:textColor="#fff"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>














    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>


