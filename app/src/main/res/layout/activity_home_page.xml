<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faisal.supermom.HomePageActivity"
    android:id="@+id/drawerLayout"
    android:background="@drawable/homepage_bg2"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout1">


        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="Welcome"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/colorwhite"
            android:fontFamily="cursive"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

            />


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu"

        >

    </android.support.design.widget.NavigationView>



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.faisal.supermom.HomePageActivity"
        android:gravity="center_vertical"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newBabyNameEditTextID"
            android:hint="enter your baby name"
            android:textColorHint="@color/colorwhite"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@color/colorwhite"
            />




        <Button
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/birthdayPicker"
            android:padding="5dp"

            android:background="@drawable/button_circle_radius"
            android:textColor="#fff"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"

            />




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/logOut"
            android:layout_below="@+id/birthday"

            android:layout_marginTop="20dp"

            android:background="@drawable/button_circle_radius"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#fff"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"


            />


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>




