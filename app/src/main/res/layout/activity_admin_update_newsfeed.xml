<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faisal.supermom.AdminUpdateNewsfeedActivity"

    android:background="@drawable/update_newsfeed_bg1"

    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/textNewsfeed"


        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Update Newsfeed"
            android:textColor="@color/colorwhite"
            android:textAlignment="center"
            android:fontFamily="cursive"
            android:textSize="30dp"
            android:textStyle="bold"

            />


    </LinearLayout>



    <ListView
        android:id="@+id/showNewsfeedInfoListViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/textNewsfeed"
        android:layout_marginTop="10dp"

        />

</RelativeLayout>
