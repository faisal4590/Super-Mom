<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faisal.supermom.AdminAddHealthMonitorInfoActivity"
    android:padding="10dp"
    >

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Child info"
       android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
       android:textSize="40dp"
       android:fontFamily="cursive"


       android:layout_marginStart="82dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin1Id"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminAddChildHeightID"
            android:hint="Enter the child height(In cm)"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminAddChildWeightID"
            android:hint="Enter the child weight(In kg)"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminAddChildAgeID"
            android:hint="Enter the child age(In months)"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_circle_radius"
            android:layout_marginTop="20dp"
            android:text="Save data"
            android:id="@+id/processBtnSaveHealthMonitorInfoBTNID"
            android:textColor="@color/colorwhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />

    </LinearLayout>


</RelativeLayout>
